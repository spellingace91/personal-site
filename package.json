{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "Personal site of John Minnich",
  "main": "index.js",
  "repository": "git@github.com:spellingace91/personal-site.git",
  "author": "spellingace91 <spellingace91@gmail.com>",
  "license": "MIT",
  "private": true,
  "paths": {
    "src": {
      "base": "./src/",
      "css": "./src/css/",
      "fontello": "./src/fontello/",
      "fonts": "./fonts/",
      "js": "./src/js/",
      "scss": "./src/scss/",
      "img": "./src/img/"
    },
    "dist": {
      "base": "./public/",
      "css": "./public/css/",
      "js": "./public/js/",
      "fonts": "./public/fonts/",
      "img": "./public/img/"
    },
    "build": {
      "base": "./build/",
      "css": "./build/css/",
      "fontello": "./build/fonts/fontello/",
      "fonts": "./build/fonts/",
      "js": "./build/js/",
      "html": "./build/html/",
      "img": "./build/img/"
    },
    "favicon": {
      "src": "./src/img/favicon_src.jpg",
      "dest": "./public/img/site/",
      "path": "/img/site/"
    },
    "scss": [],
    "templates": "./src/templates/"
  },
  "urls": {
    "live": "https://johnminnich.com/"
  },
  "vars": {
    "siteCssName": "site.combined.min.css",
    "scssName": "main.scss",
    "cssName": "main.css"
  },
  "globs": {
    "distCss": [
      "./node_modules/sanitize.css/sanitize.css",
      "./build/fonts/fontello/css/fontello-codes.css",
      "./build/css/*.css",
      "./src/css/*.css"
    ],
    "babelJs": [
      "./src/js/*.js"
    ],
    "distJs": [
      "./build/js/*.js",
      "./node_modules/lazysizes/lazysizes.min.js",
      "./node_modules/lazysizes/plugins/bgset/ls.bgset.min.js",
      "./node_modules/picturefill/dist/picturefill.min.js"
    ],
    "img": [
      "./public/img/"
    ],
    "fonts": [
      "./build/fonts/fontello/font/*.{eot,ttf,woff,woff2}",
      "./src/fonts/*.{eot,ttf,woff,woff2}"
    ],
    "siteIcon": "./public/img/site/favicon.*"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "fancy-log": "^1.3.2",
    "gm": "^1.23.1",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0-beta.2",
    "gulp-cached": "^1.1.1",
    "gulp-concat": "^2.6.1",
    "gulp-connect": "^5.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-favicons": "^2.2.7",
    "gulp-filter": "^6.0.0",
    "gulp-fontello": "^0.5.1",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-header": "^2.0.5",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.3",
    "gulp-newer": "^1.4.0",
    "gulp-nunjucks-render": "^2.2.2",
    "gulp-plumber": "^1.2.0",
    "gulp-print": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-responsive-images": "^0.0.4",
    "gulp-sass": "^4.0.1",
    "gulp-sass-lint": "^1.4.0",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.1",
    "sanitize.css": "^11.0.0"
  },
  "dependencies": {
    "gulp": "^4.0.2"
  },
  "scripts": {
    "start": "clear && gulp",
    "build": "clear && gulp build"
  }
}
